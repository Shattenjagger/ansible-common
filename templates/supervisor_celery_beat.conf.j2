[program:{{ host }}_celery_beat]
command=/srv/{{ host }}/celery_beat_start.sh  "{{ settings_file }}"
user=www-data
numprocs=1
stdout_logfile = /srv/{{ host }}/logs/celery_beat.log
redirect_stderr = true
environment=LANG=en_US.UTF-8,LC_ALL=en_US.UTF-8
autostart=true
autorestart=true
startsecs=10
stopwaitsecs=10
killasgroup=true
priority=998
